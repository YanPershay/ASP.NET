@model IEnumerable<ASP.NET.MVC.CRUD.Models.NumbersModel>

@{
    ViewData["Title"] = "Phonebook";
}

<input type="button" class="btn btn-lg btn-block btn-success" formmethod="get" value="Add contact" onclick="location.href='@Url.Action("Add", "Home")'" />

<table class="table table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Number
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>
                @item.Name
            </th>
            <th>
                @item.Surname
            </th>
            <th>
                @item.Number
            </th>
            <th>
                <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id"><input type="button" value="Edit" class="btn btn-warning" /></a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id"><input type="button" value="Delete" class="btn btn-danger" /></a>
            </th>
        </tr>
    }
</table>

