@model ASP.NET.MVC.CRUD.Models.NumbersModel

@{
    ViewData["Title"] = "Update";
}

<form asp-controller="Home" asp-action="UpdateSave" method="post">
    <input type="hidden" asp-for="Id" value="@ViewData["Id"]"/>
    
    <div class="form-group">
        <label for="nameText">Name</label>
        <input type="text" class="form-control" asp-for="Name" id="nameText" value="@ViewData["Name"]">
    </div>
    <div class="form-group">
        <label for="surnameText">Surname</label>
        <input type="text" class="form-control" asp-for="Surname" id="surnameText" value="@ViewData["Surname"]">
    </div>
    <div class="form-group">
        <label for="numberText">Name</label>
        <input type="text" class="form-control" asp-for="Number" id="numberText" value="@ViewData["Number"]">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>